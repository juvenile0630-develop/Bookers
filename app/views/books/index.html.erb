<h1>Books</h1>

<table>
<thead>
<tr>
<th>Title</th>
<th>Body</th>
<th colspan="3"></th>
</tr>
</thead>
  <tbody>
<% @books.each do |b| %>
  <tr>
    <td><%= b.title %> </td>
    <td><%= b.body  %> </td>
    <td><%= link_to "Show", book_path(b) %></td>
    <td><%= link_to "Edit", edit_book_path(b) %></td>
    <td><%= link_to "Remove", book_path(b), method: :delete %></td>
  </tr>
<% end %>
  </tbody>
<table>

<h2>New book</h2>

<%= form_for(@newbook, :url => {controller: 'books', action:'create'}) do |f| %>

<h4>タイトル</h4>
<%= f.text_field :title %>

<h4>本文</h4>
<%= f.text_area :body %>

<%= f.submit 'create book' %>

<% end %>


